local spawnPoints = {
	["Axis"] = -800,
	["A"] = -500,
	["B"] = -250,
	["C"] = 0,
	["D"] = 250,
	["E"] = 500,
	["Allies"] = 800
}

local orderedNames = { "Axis", "A", "B", "C", "D", "E", "Allies" }

local function trySpawn(arg1)
	GameEvent:FireServer("Spawn", {nil, Vector3.new(math.random(-163, 163), 90, spawnPoints[arg1])})
end

for _, name in ipairs(orderedNames) do
	Deploy:CreateButton(name, function()
		GameEvent:FireServer("Spawn", {nil, Vector3.new(math.random(-163, 163), 90, spawnPoints[name])})
	end)
end

-- 

local Airstrike = Menu:CreateSection("Airstrike")

for _, name in ipairs(orderedNames) do
	Airstrike:CreateButton(name, function()
		if states.AirstrikePos then return end
		
		local startPos = Vector3.new(-163, 400, spawnPoints[name])
		local endPos = Vector3.new(163, 400, spawnPoints[name])
		
		for i = 0, 20 do
			states.AirstrikePos = startPos:Lerp(endPos, i/20)
			
			local char = Player.Character
			GameEvent:FireServer("Spawn", {[2] = states.AirstrikePos})
			
			if char == Player.Character then char = Player.CharacterAdded:Wait() end

			local tool = Player.Backpack:FindFirstChild("Grenade") or Player.Backpack:WaitForChild("Grenade", 0.2)

			if tool and tool:FindFirstChildWhichIsA("RemoteEvent") and char:FindFirstChild("Humanoid") then
				if states.SpawnRate ~= 0 then
					task.wait(states.SpawnRate / 1000)
				end

				char.Humanoid:EquipTool(tool)
				tool.RemoteEvent:FireServer(states.AirstrikePos - Vector3.new(0, 20, 0))
			end
		end
		
		states.AirstrikePos = nil
	end)
end

